{
	"manifest_version": 2,
	"name": "Ask Before Download (Prevent Auto Download)",
	"description": "Used to prevent unnecessary wasting of mobile network traffic.\n\nWill prompt the user to confirm before download.\nOnly Useful on Firefox Android, since other platform won't sliently accept downloads.",
	"version": "1",
	"developer": {
		"name": "StrongOp",
		"url": "https://github.com/strongopx/ask-before-download.fx-ext"
	},
	"permissions": [
		"<all_urls>",
		"tabs",
		"activeTab",
		"webRequest",
		"webRequestBlocking",
		"storage"
	],
	"icons": {
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
	},
	"background": {
		"scripts": [
			"background/util.js",
			"background/blacklist.js",
			"background/whitelist.js",
			"background/ask-before-download.js"
		]
	},
	"web_accessible_resources": [
		"popup/on-install.html",
		"popup/user-action-page.html"
	],
	"applications": {
		"gecko": {
			"id": "ask-before-download.fx-ext.strongopx@github.com",
			"strict_min_version": "57.0"
		}
	}
}